@{
    ViewData["Title"] = "Home Page";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Society Sphere</title>

    <link rel="stylesheet" href="~/css/Style.css">

    <!-- box icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>

    <!-- header design -->
    <header class="header">
        <a href="#" class="logo">Home<span class="animate" style="--i:1;"></span></a>

        <div class="bx bx-menu" id="menu-icon"><span class="animate" style="--i:2;"></span></div>
    </header>

    <!-- home section design -->
    <section class="home show-animate" id="home">
        <div class="home-content">
            <h1>Hi, We're <span>Society Sphere</span><span class="animate" style="--i:2;"></span></h1>
            <div class="text-animate">
                <h3>We shape the future of society together.</h3>
                <span class="animate" style="--i:3;"></span>
            </div>
            <p>
                Watch as the name comes to life, pulsating with energy and purpose, embodying the essence of our initiative.

                Immerse yourself in a world where bold ideas intersect and societal dynamics thrive.

                At "Society Sphere," we are more than a project; we are a movement.
                <span class="animate" style="--i:4;"></span>
            </p>

            <div class="btn-box">
                <a asp-controller="Login" asp-action="Login" class="btn">Go To Login</a>
                <a asp-controller="Guest" asp-action="Index" class="btn">Login as a Guest</a>
                <span class="animate" style="--i:5;"></span>
            </div>
        </div>

        <div class="home-sci">
            <a href="#"><i class='bx bxl-facebook'></i></a>
            <a href="#"><i class='bx bxl-twitter'></i></a>
            <a href="#"><i class='bx bxl-linkedin'></i></a>
            <span class="animate" style="--i:6;"></span>
        </div>

        <div class="home-imgHover">
            <img src="~/css/Logo_1.png" align="middle" alt="Society Sphere Logo" class="logo2">
        </div>
        
        <span class="animate home-img" style="--i:7;"></span>
    </section>  
    <!-- footer design -->
    <script>
        // Function to clear browser history
        function clearHistory() {
            window.history.replaceState(null, null, window.location.href);
            window.history.pushState(null, null, window.location.href);
            window.onpopstate = function () {
                window.history.go(1);
            };
        }

        // Call clearHistory function when the home page is loaded
        window.onload = clearHistory;
    </script>
    <script src="~/Js/script.js"></script>
</body>

</html>
