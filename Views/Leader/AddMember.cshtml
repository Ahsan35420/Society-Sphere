@model List<SocietySphere.Models.ViewModel.TempMember>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Member</title>
    <style>
        body {
            background-color: black;
            color: black;
            font-family: 'Times New Roman', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 50px auto 50px;
            padding: 20px;
            background-color: #5688A8;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #D3D7DA;
            color: #333;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom:10px;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .request {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f0f0f0;
            margin-bottom: 10px;
            border-radius: 5px;
        }

            .request .details {
                flex-grow: 1;
            }

            .request .action button {
                margin-left: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Add Member</h1>
        @if (Model != null && Model.Any())
        {
            foreach (var request in Model)
            {
                <div class="request">
                    <div class="details">
                        <div><strong>Username:</strong> @request.Username</div>
                        <div><strong>Society Name:</strong> @request.SocietyName</div>
                        <div><strong>GPA:</strong> @request.GPA</div>
                        <div><strong>Semester:</strong> @request.Semester</div>
                    </div>
                    <div class="action">
                        <form method="post" action="@Url.Action("AcceptRequest", "Leader")">
                            <input type="hidden" name="username" value="@request.Username" />
                            <button type="submit" class="btn">Accept</button>
                        </form>
                        <form method="post" action="@Url.Action("RejectRequest", "Leader")">
                            <input type="hidden" name="username" value="@request.Username" />
                            <button type="submit" class="btn">Reject</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No membership requests available.</p>
        }
    </div>
</body>
</html>
