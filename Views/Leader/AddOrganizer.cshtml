@model SocietySphere.Models.ViewModel.Organizer

@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Member</title>
    <style>
        body {
            background-color: black;
            color: black;
            font-family: 'Times New Roman', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 50px auto 50px;
            padding: 20px;
            background-color: #5688A8;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #D3D7DA;
            color: #333;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 25px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Add Organizer</h1>
        <form method="post">
            <div class="dropdown">
                <label for="Username">Members:</label>
                <select id="Username" name="Username" asp-for="SocietyName">
                    <option value="Username">Select Organizer</option>
                    @foreach (var member in ViewBag.Members)
                    {
                        <option value="@member">@member</option>
                    }
                </select>
            </div>           
            <button type="submit" class="btn">Add Organizer</button>
        </form>
    </div>
</body>
</html>
