@model List<SocietySphere.Models.ViewModel.Feedback>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Feedback</title>
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Times New Roman', Times, serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .container {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
            position: relative;
            z-index: 1;
        }

        .postedin {
            font-style: italic;
            margin-bottom: 10px;
        }

        .feedback {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
            text-align: left;
        }

        .poster {
            font-weight: bold;
            color: #5688A8;
            margin-bottom: 5px;
        }

        .feedback-text {
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>View Feedback</h1>
        @if (Model != null && Model.Any())
        {
            foreach (var feedback in Model)
            {
                <div class="feedback">
                    <div class="poster">@feedback.Username</div>
                    <div class="postedin">@feedback.SocietyName</div>
                    <div class="feedback-text">@feedback.Content</div>
                </div>
            }
        }
        else
        {
            <p>No feedback available.</p>
        }
    </div>
</body>
</html>