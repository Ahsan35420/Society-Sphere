@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Society</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Times New Roman, serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin-top: 40px;
            width: 90%;
            max-width: 800px;
        }

        .left-column,
        .right-column {
            flex: 1;
        }

        .left-column {
            margin-right: 50px;
        }

        h1 {
            text-align: center;
            margin-top: 50px;
            margin-left: 50px;
        }

        .dropdown {
            margin-bottom: 10px;
        }

            .dropdown select {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                margin-bottom: 10px;
            }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 20px;
            margin-right: 30px;
        }



        .dropdown select {
            height: 40px;
        }


        .button-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start; /* Align buttons to the start of the container */
        }

        .button {
            background-color: #5688A8;
            color: #fff;
            border: none;
            border-radius: 35px;
            padding: 20px 40px;
            cursor: pointer;
            font-size: 24px;
            transition: background-color 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            z-index: 1;
            margin-bottom: 15px; /* Add space between buttons */
            width: 100%; /* Make all buttons the same width */
            height: 70px; /* Make all buttons the same height */
            text-align: center; /* Center text horizontally */
            line-height: 40px; /* Center text vertically */
        }

            .button:hover {
                background-color: #007bff;
            }

            .button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -50%;
                width: 200%;
                height: 100%;
                background: rgba(255, 255, 255, 0.08);
                transition: left 0.3s;
                border-radius: 50%;
                z-index: -1;
            }

            .button:hover::before {
                left: 0;
            }

            .button:focus {
                outline: none;
            }
    </style>
</head>
<body>

    <form method="post" asp-controller="Admin" asp-action="Create">
        <h1>Create New Society</h1>
        <div class="container">
            <div class="left-column">
                <div class="dropdown">
                    <label for="societyType">Society Level:</label>
                    <select name="societyType">
                        <option value="campus">Campus Level</option>
                        <option value="department">Department Level</option>
                        <option value="special">Special Societies</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="mentor">Mentor Name:</label>
                    <input type="text" id="mentor" name="mentor" placeholder="Mentor">
                </div>
                <div class="button-container">
                    <button type="submit" class="button">Add Society</button>
                </div>
            </div>

            <div class="right-column">
                <div class="form-group">
                    <label for="societyName">Society Name:</label>
                    <input type="text" id="societyName" name="societyName" placeholder="SocietyName">
                </div>
                <div class="form-group">
                    <label for="societyIntro">Society Introduction:</label>
                    <input type="text" id="societyIntro" name="societyIntro" placeholder="SocietyIntro">
                </div>
                <div class="dropdown">
                    <label for="president">President:</label>
                    <select id="president" name="president">
                        <option value="">Select President</option>
                        @foreach (var member in ViewBag.Members)
                        {
                            <option value="@member.Username">@member.Username</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="gpa">GPA:</label>
                    <input type="text" id="gpa" name="gpa" placeholder="GPA">
                </div>
                <div class="form-group">
                    <label for="semester">Semester:</label>
                    <input type="text" id="semester" name="semester" placeholder="Semester">
                </div>
            </div>
        </div>
    </form>
  

<script>
    document.getElementById('president').addEventListener('change', function () {
        var selectedPresident = this.value;
        if (selectedPresident !== '') {
            fetch(`/Admin/GetMemberDetails?username=${selectedPresident}`)
                .then(response => response.json())
                .then(data => {
                    if (data !== null) {
                        document.getElementById('gpa').value = data.gpa;
                        document.getElementById('semester').value = data.semester;
                    } else {
                        // Handle case when member details are not found
                        console.log('Member details not found');
                    }
                })
                .catch(error => {
                    // Handle error
                    console.error('Error fetching member details:', error);
                });
        } else {
            // Clear GPA and semester fields if no president is selected
            document.getElementById('gpa').value = '';
            document.getElementById('semester').value = '';
        }
    });
</script>
    
</body>
</html>
