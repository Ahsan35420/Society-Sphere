@model SocietySphere.Models.ViewModel.MemberDetails
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request to Join Society</title>
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Times New Roman', serif;
            margin: 0;
            padding: 0;
            overflow-y: scroll;
        }

        .container {
            text-align: center;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 30px;
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #fff;
        }

        input[type="text"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #fff;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        textarea {
            resize: vertical;
            height: 100px;
        }

        .dropdown {
            margin-bottom: 10px;
            text-align:left;
           
        }

            .dropdown select {
                height: 40px;
                background-color: rgba(255, 255, 255, 0.1);
                color:white;
            }

               

            .dropdown select {
                
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                font-size: 16px;
                margin-bottom: 10px;
            }

        .btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Request to Join Society</h1>
        <form action="/submit-request" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" required asp-for="Name">
            </div>
            <div class="form-group">
                <label for="rollNumber">Roll Number:</label>
                <input type="text" id="rollNumber" required asp-for="RollNo" >
            </div>
            <div class="form-group">
                <label for="gpa">GPA:</label>
                <input type="number" id="gpa" asp-for="Gpa" step="0.01" min="0" max="4" required>
            </div>
            <div class="dropdown">
                <label for="societyType" id="SocietyName" asp-for="SocietyName">Society Name:</label>
                <select>
                    <option value="campus">Campus Level</option>
                    <option value="department">Department Level</option>
                    <option value="special">Special Societies</option>
                </select>
            </div>
            <div class="form-group">
                <label for="experience">Experience (if any):</label>
                <input type="text" id="experience" asp-for="Experience">
            </div>
            <div class="form-group">
                <label for="reason">Why do you want to join?</label>
                <textarea id="reason" asp-for="Reason" required></textarea>
            </div>
            <button type="submit" class="btn">Submit Request</button>
        </form>
    </div>
</body>
</html>