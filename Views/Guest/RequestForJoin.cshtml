@model SocietySphere.Models.ViewModel.TempMember

@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Member</title>
    <style>
        body {
            background-color: black;
            color: black;
            font-family: 'Times New Roman', serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 50px auto 50px;
            padding: 20px;
            background-color: #5688A8;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            background-color: #D3D7DA;
            color: #333;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top:25px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Member Form</h1>
        <form method="post">
            <div class="form-group">
                <label for="Username">Member Username:</label>
                <input type="text" id="Username" name="Username" asp-for="Username" required>
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input type="text" id="Password" name="Password" asp-for="Password" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$!%*?&])[A-Za-z\d$!%*?&]{8,12}$" title="Password must be 8-12 characters long and contain at least one lowercase letter, one uppercase letter, one number, and one special character">
            </div>
            <div class="dropdown">
                <label for="SocietyName">Society Name:</label>
                <select id="SocietyName" name="SocietyName" asp-for="SocietyName">
                    <option value="SocietyName">Select Society</option>
                    @foreach (var society in ViewBag.Societies)
                    {
                        <option value="@society">@society</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="GPA">GPA</label>
                <input type="text" id="GPA" name="GPA" asp-for="GPA" required>
            </div>
            <div class="dropdown">
                <label for="Semester">Semester:</label>
                <select id="Semester" name="Semester" asp-for="Semester">
                    <option value="1">Semester 1</option>
                    <option value="2">Semester 2</option>
                    <option value="3">Semester 3</option>
                    <option value="4">Semester 4</option>
                    <option value="5">Semester 5</option>
                    <option value="6">Semester 6</option>
                </select>
            </div>
            <button type="submit" class="btn">Request</button>
        </form>
    </div>
</body>
</html>
