@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Quasar Trio</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: "Times New Roman", Times, serif;
        }

        .login-container {
            margin-top: 50px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input {
                width: 300px;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
            }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .logo-container {
            text-align: center;
            margin-top: 50px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="logo-container">
        <img src="~/images/logo.png" alt="Quasar Trio Logo">
    </div>
    <div class="login-container">
        <h1>Login to Society Sphere</h1>
        <form action="/Login" method="POST">
            <div class="form-group">
                <input type="text" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <a href="/homepage" class="btn btn-primary">Login</a>
                <a href="/Register" class="btn btn-secondary">Register</a>
            </div>
        </form>
    </div>
</body>
</html>
