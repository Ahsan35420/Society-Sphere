@page
@model SE_Project.Pages.adminHomeModel
@{
    ViewData["Title"] = "adminHome";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dark Theme Page</title>
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Times New Roman', Times, serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .container {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        h1 {
            font-size: 48px;
            margin-bottom: 30px;
            position: relative;
            z-index: 1;
        }

        .button-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 30px;
            position: relative;
            z-index: 1;
        }

        .button {
            background-color: #5688A8;
            color: #fff;
            border: none;
            border-radius: 35px;
            padding: 20px 40px;
            cursor: pointer;
            font-size: 24px;
            transition: background-color 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .button:hover {
                background-color: #007bff;
            }

            .button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -50%;
                width: 200%;
                height: 100%;
                background: rgba(255, 255, 255, 0.08);
                transition: left 0.3s;
                border-radius: 50%;
                z-index: -1;
            }

            .button:hover::before {
                left: 0;
            }

            .button:focus {
                outline: none;
            }

        /* Random positioning for bubbles */
        .circle {
            position: absolute;
            background-color: #182a36;
            border-radius: 50%;
            z-index: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to Our Society</h1>
        <div class="button-container">
            <button class="button" onclick="location.href='/NewSociety'">Register Society</button>
            <button class="button" onclick="location.href='/ViewAnn'">View Announcements</button>
            <button class="button" onclick="location.href='/ViewFeedback'">View Feedback</button>
        </div>
    </div>

    <script>
        // Function to generate random position and size for bubbles
        function generateBubbles() {
            const container = document.querySelector('body');
            const numBubbles = 20; // Number of bubbles
            const minSize = 40; // Minimum bubble size
            const maxSize = 130; // Maximum bubble size

            for (let i = 0; i < numBubbles; i++) {
                const bubble = document.createElement('div');
                const size = Math.floor(Math.random() * (maxSize - minSize + 1)) + minSize; // Random size
                const top = Math.random() * 100; // Random top position
                const left = Math.random() * 100; // Random left position

                bubble.classList.add('circle');
                bubble.style.width = `${size}px`;
                bubble.style.height = `${size}px`;
                bubble.style.top = `${top}%`;
                bubble.style.left = `${left}%`;

                container.appendChild(bubble);
            }
        }

        generateBubbles();
    </script>
</body>
</html>
